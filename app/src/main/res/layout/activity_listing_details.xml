<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:padding="23dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Carousel with Save Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageCarousel"
                android:layout_width="match_parent"
                android:layout_height="600dp" />

            <ImageView
                android:id="@+id/btnSaveListing"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:padding="6dp"
                android:src="@drawable/ic_heart_outline"
                android:scaleType="centerInside"
                android:contentDescription="Save listing" />
        </RelativeLayout>

        <!-- Posted by section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/bookPostedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by: Username â€¢ 1h ago"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Title and Price -->
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/bookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5.90"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAddToSwapList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Swap List"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSwap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Swap"
                android:layout_marginStart="8dp"
                android:backgroundTint="#03DAC5"
                android:textColor="#000000" />
        </LinearLayout>


        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description text goes here..."
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</ScrollView>